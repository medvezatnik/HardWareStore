<?php 

class Route 
{
    function start()
    {
       
        $action = 'Index';
        $controller = 'Main';

        echo $_SERVER['REQUEST_URI'];
        $uriParams = explode('/', $_SERVER['REQUEST_URI']);

        if (isset($uriParams[1])) {
            $controller = $uriParams[1];
        }

        if (isset($uriParams[2])) {
            $action = $uriParams[2];
        }
 
        $controllerName = 'Controller' . ucfirst($controller);
        $actionName = 'action' . $action;

        $controllerFile = $controllerName . '.php';

        echo $controllerFile;

                 

    }

    





}

?>
